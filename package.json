{
  "name": "npc-centric-skyrim",
  "type": "module",
  "packageManager": "yarn@4.6.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.3.0",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "sinon": "^21.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "uvu": "^0.5.6"
  },
  "scripts": {
    "build": "rm -rf dist && yarn tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write ./src",
    "check": "biome lint ./src && biome format ./src",
    "start": "yarn node dist/index.js",
    "test": "NODE_ENV=test ITERATIONS_NUMBER=10 yarn uvu -r tsx",
    "coverage": "c8 --all --include=src yarn test"
  },
  "dependencies": {
    "groq-sdk": "^0.31.0",
    "ollama": "^0.5.17",
    "openai": "^5.16.0"
  }
}
